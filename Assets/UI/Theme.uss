:root {
    --color-background: rgba(13, 13, 15, 0.92);
    --color-light-background: #29292E;
    --color-btn-highlighted: #9747FF;
    --color-btn: #49494C;
    --border-radius: 12px;
    --color-white: #FFFFFF;
    --color-purple: #AF72FE;
    --color-orange: #FF6B4A;
    --color-green: #66C64F;
    --color-light-blue: #6CC3F5;
    --color-pink: #FF5ABF;
    --color-light-green: #BCE648;
    --color-dark-blue: #5B8FFF;
    --color-red: #FB3E67;
    --color-yellow: #FF9A2E;
    --color-azure: #00C2B2;
    --color-grey: #A2A2A8;
}

Label {
    color: var(--color-white);
    -unity-font: url("project://database/Assets/TextMesh Pro/Fonts/GeistMono.ttf");
    -unity-font-definition: url("project://database/Assets/TextMesh Pro/Fonts/GeistMono SDF.asset");
}

.main-btn {
    width: 176px;
    height: 81px;
    padding: 12px 12px 16px;
    border-radius: var(--border-radius);
    flex-direction: column;
    justify-content: space-between;
}

.main-btn__icon {
    height: 24px;
    width: 24px;
    justify-content: center;
    align-items: center;
}

.main-btn__icon > VisualElement {
    height: 20px;
    width: 20px;
    -unity-background-scale-mode: scale-to-fit;
    background-image: url("project:/Assets/Icons/Platform.svg");
}

.main-btn__title {
    font-size: 13px;
    height: 13px;
    margin-bottom: 4px;
}

.main-btn_inner-container {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}

.hidden {
    visibility: hidden;
}